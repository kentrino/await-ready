{
  "name": "await-ready",
  "version": "0.1.1",
  "description": "Check if a service is ready",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kentrino/await-ready"
  },
  "bin": {
    "await-ready": "./dist/main.mjs"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./parseArgs": {
      "import": {
        "types": "./dist/parseArgs.d.mts",
        "default": "./dist/parseArgs.mjs"
      }
    }
  },
  "scripts": {
    "dev": "bun run src/main.ts",
    "build": "tsdown",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt --check .",
    "format:fix": "oxfmt --write .",
    "knip": "knip-bun",
    "test": "run-p {lint,format,knip,typecheck,unit}",
    "unit": "vitest run",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "citty": "^0.2.0",
    "knip": "^5.83.1",
    "npm-run-all2": "^8.0.4",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
